<% title _('Passwordstate Servers') %>
<% title_actions new_link(_('Create Passwordstate Server connection')) %>

<table class="<%= table_css_classes 'table-fixed' %>">
  <thead>
    <tr>
      <th class="col-md-6"><%= sort :name, :as => s_("Passwordstate Server|Name") %></th>
      <th><%= _('Actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @passwordstate_servers.each do |server| %>
      <tr>
        <td class="ellipsis"><%= link_to server.name, server %></td>
        <td>
          <%= action_buttons(link_to_if_authorized(_('Edit'), hash_for_edit_passwordstate_server_path(server).merge(:auth_object => server, :authorizer => authorizer)))
          #display_delete_if_authorized(hash_for_destroy_passwordstate_server_path(:id => server).merge(:auth_object => server, :authorizer => authorizer), :data => { :confirm => _("Delete %s?") % server.name }))
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate_with_info @passwordstate_servers %>

