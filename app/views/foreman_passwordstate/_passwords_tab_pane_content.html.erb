<a href="<%= @host.passwordstate_server.url %>"><h2 style="display: inline-block;">Passwordstate server</h2>&nbsp;<i class="fa fa-external-link"></i></a>
<%-
all_passwords = @host.passwordstate_passwords

groups = all_passwords.group_by { |p| p.password_list_id.to_i }
groups.each do |id, passwords|
  pwlist = @host.passwordstate_server.password_lists.get(id)
-%>
<table class="<%= table_css_classes %>">
  <thead>
    <tr>
      <th colspan="2"><a href="<%= @host.passwordstate_server.get_list_url(pwlist) %>" title="<%= pwlist.description %>"><%= pwlist.full_path %>&nbsp;<i class="fa fa-external-link"></i></a></th>
    </tr>
  </thead>
  <tbody>
<%- passwords.each do |pw| -%>
    <tr>
      <td title="<%= pw.notes || pw.description.split('|').first.strip %>"><%= pw.user_name %></td>
<%- if pw.expiry_date -%>
      <td colspan="2" title="<%= pw.expiry_date %>">
<%-
expired = Time.now > pw.expiry_date
diff = Time.now - pw.expiry_date
expiry_near = diff < 30 * 24 * 60 * 60

if expiry_near
  str = _('Expires %s') unless expired
  str = _('Expired %s') if expired
-%>
<%= str % date_time_relative_value(pw.expiry_date) %>
<%-
else
  str = _('Expires on %s') unless expired
  str = _('Expired on %s') if expired
-%>
<%= str % date_time_absolute_value(pw.expiry_date) %>
<%-
end
-%>
      </td>
<%- end -%>
    </tr>
<%- end -%>
  </tbody>
</table>
<%- end -%>
