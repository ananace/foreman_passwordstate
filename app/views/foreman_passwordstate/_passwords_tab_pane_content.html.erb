<h2>Passwordstate server <a href="<%= @host.passwordstate_server.url %>"><%= @host.passwordstate_server %></a></h2>
<table class="<%= table_css_classes %>">
  <thead>
    <tr>
      <th colspan="2"><%= _('Managed Passwords') %></th>
    </tr>
  </thead>
  <tbody>
<%- @host.passwordstate_passwords.each do |pw| -%>
    <tr>
      <td title="<%= pw.notes || pw.description.split('|').first.strip %>"><%= pw.user_name %></td>
<%- if pw.expiry_date -%>
<%-
expired = Time.now > pw.expiry_date
#timespan = pw.expiry_date - Time.now
-%>
      <td colspan="2">Expire<%= expired ? 'd' : 's' %> on <%= pw.expiry_date.strftime '%F' %></td>
<%- end -%>
    </tr>
<%- end -%>
  </tbody>
</table>
